# Database Configuration - Connect to your external database
# Examples for different database types:
# PostgreSQL: postgresql://username:password@host:port/database
# MySQL: mysql+pymysql://username:password@host:port/database
# SQL Server: mssql+pyodbc://username:password@host:port/database?driver=ODBC+Driver+17+for+SQL+Server
# Oracle: oracle+cx_oracle://username:password@host:port/database
DB_URL=mysql+pymysql://readonly_user:secure_password@your-database-host:3306/your_database

# LLM Configuration
DEFAULT_LLM_PROVIDER=openai  # Options: "openai", "anthropic", "google", "custom"

# OpenAI Configuration (only needed if using OpenAI)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo  # or gpt-4, gpt-4-turbo, etc.
OPENAI_BASE_URL=https://api.openai.com/v1  # or custom endpoint
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=512
OPENAI_TIMEOUT=60

# Anthropic Configuration (only needed if using Anthropic)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_TEMPERATURE=0.1
ANTHROPIC_MAX_TOKENS=512
ANTHROPIC_TIMEOUT=60

# Google Configuration (only needed if using Google)
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_MODEL=gemini-pro
GOOGLE_TEMPERATURE=0.1
GOOGLE_MAX_TOKENS=512
GOOGLE_TIMEOUT=60

# Custom LLM Configuration (only needed if using custom/self-hosted LLM)
CUSTOM_LLM_BASE_URL=http://localhost:11434/v1  # or your custom endpoint
CUSTOM_LLM_MODEL=llama2  # or your model name
CUSTOM_LLM_API_KEY=your-custom-api-key-here  # optional
CUSTOM_LLM_TEMPERATURE=0.1
CUSTOM_LLM_MAX_TOKENS=512
CUSTOM_LLM_TIMEOUT=60

# API Configuration
API_HOST=0.0.0.0
API_PORT=7000

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production

# Security and Scoping Configuration
SECURITY_SCOPING_COLUMN=accounts_entity_id  # Default column name for data scoping
SECURITY_SCOPING_VALUE_SOURCE=request  # Source of scoping value: request, user_context
SECURITY_SCOPING_VALUE_FIELD=scoping_value  # Field name in request containing scoping value
SECURITY_ENABLE_AUTO_SCOPING=true  # Enable automatic scoping for scoped tables
SECURITY_CUSTOM_VALIDATION_RULES={"max_tables": 5, "allowed_operations": ["SELECT"]}  # Custom validation rules as JSON

# Multi-Role Access Control
SECURITY_ENABLE_MULTI_ROLE_ACCESS=true  # Enable multi-role access control system
SECURITY_DEFAULT_USER_ROLE=customer  # Default user role when not specified

# Role Configuration (JSON format)
SECURITY_ROLES_CONFIG={"customer": {"requires_scoping": true, "access_pattern": "single_entity", "description": "Customer access limited to their entity"}, "admin": {"requires_scoping": false, "access_pattern": "all_entities", "can_scope_to_specific": true, "bypass_validation": true, "description": "Admin access with full privileges"}}

# Access Control Policies
SECURITY_ENABLE_ACCESS_LOGGING=true  # Enable access logging for audit purposes

# Security Policies
SECURITY_MAX_ENTITIES_PER_QUERY=10  # Maximum number of entities that can be queried in a single request
SECURITY_ENABLE_CROSS_ENTITY_QUERIES=false  # Allow queries that span multiple entities


# Rate Limiting
RATE_LIMIT_PER_MINUTE=60 